{
  "servers":[
    {
      "default_log_path":"stdout",
      "use_edge_mode": true,
      "listeners":[
        {
          "name":"gatewayListener",
          "address": "127.0.0.1:2045",
          "bind_port": true,
          "log_path": "stdout",
          "filter_chains": [{
            "tls_context":{},
            "filters": [
              {
                "type": "delegation",
                "config": {
                  "downstream_protocol": "Http1",
                  "upstream_protocol": "Http2",
                  "router_config_name":"client_router"
                }
              }
            ]
          }]
        }
      ]
    }
  ]
}
