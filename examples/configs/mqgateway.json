{
  "servers":[
    {
      "default_log_path":"stdout",
      "use_edge_mode": false,
      "listeners":[
        {
          "name":"httpListener",
          "address": ":8045",
          "bind_port": true,
          "log_path": "stdout",
          "filter_chains": [{
            "tls_context":{
            },
            "filters": [
              {
                "type": "proxy",
                "config": {
                  "downstream_protocol": "Http1",
                  "upstream_protocol": "MQ",
                  "router_config_name":"client_router"
                }
              },
              {
                "type":"connection_manager",
                "config":{
                  "router_config_name":"client_router",
                  "virtual_hosts":[{
                    "name":"clientHost",
                    "domains": ["*"],
                    "routers": [
                      {
                        "match":{"headers":[{"name":"service","value":".*"}]},
                        "route":{"cluster_name":"clientCluster"}
                      }
                    ]
                  }]
                }
              }]
          }],
          "stream_filters": [
            {
              "type": "common",
              "config": {
                "rule_configs": [
                  {
                    "enable": true,
                    "id": 1,
                    "index": 3,
                    "limit": {
                      "limit_strategy": "QPS",
                      "max_burst_ratio": 1.0,
                      "period_ms": 100,
                      "max_allows": 0
                    },
                    "name": "RuleAllowPost",
                    "resources": [
                      {
                        "headers": [
                          {
                            "compare_type": "NOTEQUALS",
                            "key": "x-strike-method",
                            "value": "POST"
                          }
                        ]
                      }
                    ],
                    "run_mode": "CONTROL"
                  }
                ]
              }
            }
          ]
        },
        {
          "name":"mqttListener",
          "address": "127.0.0.1:8055",
          "bind_port": true,
          "log_path": "stdout",
          "filter_chains": [{
            "tls_context":{},
            "filters": [
              {
                "type": "proxy",
                "config": {
                  "downstream_protocol": "Mqtt",
                  "upstream_protocol": "Http1",
                  "router_config_name":"client_router"
                }
              },
              {
                "type":"connection_manager",
                "config":{
                  "router_config_name":"client_router",
                  "virtual_hosts":[{
                    "name":"clientHost",
                    "domains": ["*"],
                    "routers": [
                      {
                        "match":{"headers":[{"name":"service","value":".*"}]},
                        "route":{"cluster_name":"clientCluster"}
                      }
                    ]
                  }]
                }
              }]
          }]
        },
        {
          "name":"mqttsListener",
          "address": "127.0.0.1:8056",
          "bind_port": true,
          "log_path": "stdout",
          "filter_chains": [{
            "tls_context":{
              "status": true,
              "ca_cert":"examples/certs/ca.pem",
              "cert_chain":"examples/certs/cert.pem",
              "private_key":"examples/certs/key.pem",
              "verify_client": true,
              "ecdh_curves": "P256"
            },
            "filters": [
              {
                "type": "proxy",
                "config": {
                  "downstream_protocol": "Mqtt",
                  "upstream_protocol": "Http1",
                  "router_config_name":"client_router"
                }
              },
              {
                "type":"connection_manager",
                "config":{
                  "router_config_name":"client_router",
                  "virtual_hosts":[{
                    "name":"clientHost",
                    "domains": ["*"],
                    "routers": [
                      {
                        "match":{"headers":[{"name":"service","value":".*"}]},
                        "route":{"cluster_name":"clientCluster"}
                      }
                    ]
                  }]
                }
              }]
          }]
        }
      ]
    }
  ],
  "cluster_manager":{
    "clusters":[
      {
        "Name":"etcdCluster",
        "type": "SIMPLE",
        "lb_type": "LB_RANDOM",
        "max_request_per_conn": 1024,
        "conn_buffer_limit_bytes":32768,
        "hosts":[
          {"address":"127.0.0.1:8080"}
        ]
      },
      {
        "Name": "clientCluster",
        "type": "SIMPLE",
        "lb_type": "LB_RANDOM",
        "max_request_per_conn": 1024,
        "conn_buffer_limit_bytes":32768,
        "hosts":[
          {"address":"127.0.0.1:2046"}
        ]
      }
    ]
  }
}
